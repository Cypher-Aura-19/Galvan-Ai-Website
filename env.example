# Database Configuration
MONGODB_URI=mongodb://localhost:27017/galvan-ai

# Flask Backend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# Email Configuration
# Option 1: Resend (Recommended - Free tier available)
# Get your API key from https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# Option 2: SMTP (Fallback)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password_here

# Email Settings
FROM_EMAIL=noreply@galvanai.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Authentication
ADMIN_EMAIL=admin@galvanai.com
ADMIN_PASSWORD=your_admin_password_here

# Cloudinary Configuration
# Get these from Cloudinary Dashboard: https://cloudinary.com/console
# 1. Sign up for free account at https://cloudinary.com/
# 2. Go to Dashboard > Settings > Access Keys
# 3. Copy your Cloud Name, API Key, and API Secret
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here 